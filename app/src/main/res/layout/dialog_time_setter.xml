<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_time_setter_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TimePicker
            android:id="@+id/dialog_time_setter_time_picker"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/dialog_time_setter_done"
                style="@style/material_button"
                android:text="@string/done"
                android:textColor="@color/colorAccent"
                android:layout_alignParentEnd="true"
                tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/dialog_time_setter_cancel"
                style="@style/material_button"
                android:text="@string/cancel"
                android:textColor="@color/colorTextDark2nd"
                android:layout_toStartOf="@id/dialog_time_setter_done"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>