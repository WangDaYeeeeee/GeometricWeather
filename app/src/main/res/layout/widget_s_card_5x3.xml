                android:layout_marginEnd="-4dp"
                android:textSize="42sp"
                android:textColor="?android:attr/textColorPrimary"
                style="@style/widget_large_title_text"
                tools:text="27°"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/widget_s_card_background_daytimeTemperature"
                    android:text="@string/ellipsis"
                    android:layout_marginStart="@dimen/little_margin"
                    android:layout_marginEnd="@dimen/little_margin"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorSecondary"
                    android:includeFontPadding="false"
                    style="@style/widget_subtitle_text"
                    tools:text="31°"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/widget_s_card_background_nighttimeTemperature"
                    android:text="@string/ellipsis"
                    android:layout_marginStart="@dimen/little_margin"
                    android:layout_marginEnd="@dimen/little_margin"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold"
                    android:alpha="0.66"
                    android:textColor="?android:attr/textColorSecondary"
                    android:includeFontPadding="false"
                    style="@style/widget_subtitle_text"
                    tools:text="19°"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/normal_margin"
            android:layout_gravity="end|bottom">

            <TextView
                android:id="@+id/widget_s_card_background_weatherText"
                android:text="@string/ellipsis"
                android:textSize="@dimen/content_text_size"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorSecondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="bottom|end"
                style="@style/widget_content_text"
                tools:text="空气 - 优"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/widget_s_card_background_aqiOrWind"
                android:text="@string/ellipsis"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="top|end"
                android:alpha="0.66"
                style="@style/widget_subtitle_text"
                tools:text="体感 34°"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>