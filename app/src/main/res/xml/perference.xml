<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/action_settings" >

    <PreferenceCategory
        android:title="@string/settings_category_basic"
        android:key="basic"
        android:layout="@layout/preference_category">

        <CheckBoxPreference
            android:title="@string/settings_title_background_free"
            android:key="@string/key_background_free"
            android:summaryOn="@string/on"
            android:summaryOff="@string/off" />

        <ListPreference
            android:title="@string/settings_title_chinese_source"
            android:key="@string/key_chinese_source"
            android:entries="@array/chinese_sources"
            android:entryValues="@array/chinese_source_values"
            android:dialogTitle="@string/settings_title_chinese_source"
            android:defaultValue="accu" />

        <ListPreference
            android:title="@string/settings_title_ui_style"
            android:key="@string/key_ui_style"
            android:entries="@array/ui_styles"
            android:entryValues="@array/ui_style_values"
            android:dialogTitle="@string/settings_title_ui_style"
            android:defaultValue="material" />

        <ListPreference
            android:title="@string/settings_title_card_order"
            android:key="@string/key_card_order"
            android:entries="@array/card_orders"
            android:entryValues="@array/card_order_values"
            android:dialogTitle="@string/settings_title_card_order"
            android:defaultValue="daily_first" />

        <CheckBoxPreference
            android:title="@string/settings_title_gravity_sensor_switch"
            android:key="@string/key_gravity_sensor_switch"
            android:summaryOn="@string/on"
            android:summaryOff="@string/off"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:title="@string/settings_title_navigationBar_color"
            android:key="@string/key_navigationBar_color"
            android:summaryOn="@string/settings_navigationBar_color_on"
            android:summaryOff="@string/settings_navigationBar_color_off" />

        <CheckBoxPreference
            android:title="@string/settings_title_fahrenheit"
            android:key="@string/key_fahrenheit"
            android:summaryOn="@string/on"
            android:summaryOff="@string/off" />

        <CheckBoxPreference
            android:title="@string/settings_title_imperial"
            android:key="@string/key_imperial"
            android:summaryOn="@string/on"
            android:summaryOff="@string/off" />

        <ListPreference
            android:title="@string/settings_title_refresh_rate"
            android:key="@string/key_refresh_rate"
            android:entries="@array/automatic_refresh_rates"
            android:entryValues="@array/automatic_refresh_rate_values"
            android:dialogTitle="@string/settings_title_refresh_rate"
            android:defaultValue="1:30" />

        <CheckBoxPreference
            android:title="@string/settings_title_alert_notification_switch"
            android:key="@string/key_alert_notification_switch"
            android:summaryOn="@string/on"
            android:summaryOff="@string/off"
            android:defaultValue="true" />

        <ListPreference
            android:title="@string/settings_language"
            android:key="@string/key_language"
            android:entries="@array/languages"
            android:entryValues="@array/language_values"
            android:dialogTitle="@string/settings_language"
            android:defaultValue="follow_system" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_category_forecast"
        android:layout="@layout/preference_category">

        <CheckBoxPreference
            android:title="@string/settings_title_forecast_today"
            android:key="@string/key_forecast_today"
            android:summaryOn="@string/on"
            android:summaryOff="@string/off" />

        <Preference
            android:title="@string/settings_title_forecast_today_time"
            android:key="@string/key_forecast_today_time" />

        <CheckBoxPreference
            android:title="@string/settings_title_forecast_tomorrow"
            android:key="@string/key_forecast_tomorrow"
            android:summaryOn="@string/on"
            android:summaryOff="@string/off" />

        <Preference
            android:title="@string/settings_title_forecast_tomorrow_time"
            android:key="@string/key_forecast_tomorrow_time" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_category_widget"
        android:layout="@layout/preference_category">

        <ListPreference
            android:title="@string/settings_title_icon_style"
            android:key="@string/key_widget_icon_style"
            android:entries="@array/icon_styles"
            android:entryValues="@array/icon_style_values"
            android:dialogTitle="@string/settings_title_icon_style"
            android:defaultValue="material" />

        <CheckBoxPreference
            android:title="@string/settings_title_click_widget_to_refresh"
            android:key="@string/key_click_widget_to_refresh"
            android:summaryOn="@string/on"
            android:summaryOff="@string/off" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_category_notification"
        android:layout="@layout/preference_category">

        <CheckBoxPreference
            android:title="@string/settings_title_notification"
            android:key="@string/key_notification"
            android:summaryOn="@string/on"
            android:summaryOff="@string/off" />

        <ListPreference
            android:title="@string/settings_title_icon_style"
            android:key="@string/key_notification_icon_style"
            android:entries="@array/icon_styles"
            android:entryValues="@array/icon_style_values"
            android:dialogTitle="@string/settings_title_icon_style"
            android:defaultValue="material" />

        <CheckBoxPreference
            android:title="@string/settings_title_notification_temp_icon"
            android:key="@string/key_notification_temp_icon"
            android:summaryOn="@string/on"
            android:summaryOff="@string/off" />

        <ListPreference
            android:title="@string/settings_title_notification_text_color"
            android:key="@string/key_notification_text_color"
            android:entries="@array/notification_text_colors"
            android:entryValues="@array/notification_text_color_values"
            android:dialogTitle="@string/settings_title_notification_text_color"
            android:defaultValue="grey" />

        <CheckBoxPreference
            android:title="@string/settings_title_notification_background"
            android:key="@string/key_notification_background"
            android:summaryOn="@string/settings_notification_background_on"
            android:summaryOff="@string/settings_notification_background_off" />

        <CheckBoxPreference
            android:title="@string/settings_title_notification_can_be_cleared"
            android:key="@string/key_notification_can_be_cleared"
            android:summaryOn="@string/settings_notification_can_be_cleared_on"
            android:summaryOff="@string/settings_notification_can_be_cleared_off" />

        <CheckBoxPreference
            android:title="@string/settings_title_notification_hide_icon"
            android:key="@string/key_notification_hide_icon"
            android:summaryOn="@string/settings_notification_hide_icon_on"
            android:summaryOff="@string/settings_notification_hide_icon_off" />

        <CheckBoxPreference
            android:title="@string/settings_title_notification_hide_in_lockScreen"
            android:key="@string/key_notification_hide_in_lockScreen"
            android:summaryOn="@string/settings_notification_hide_in_lockScreen_on"
            android:summaryOff="@string/settings_notification_hide_in_lockScreen_off" />

        <CheckBoxPreference
            android:title="@string/settings_title_notification_hide_big_view"
            android:key="@string/key_notification_hide_big_view"
            android:summaryOn="@string/settings_notification_hide_big_view_on"
            android:summaryOff="@string/settings_notification_hide_big_view_off" />

    </PreferenceCategory>

</PreferenceScreen>